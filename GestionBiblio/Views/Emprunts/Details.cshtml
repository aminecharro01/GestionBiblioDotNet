@model GestionBiblio.Models.Emprunt

@{
    ViewData["Title"] = "Détails de l'Emprunt";
}

<div class="flex min-h-[60vh] items-center justify-center p-4">
    <div class="w-full max-w-2xl">
        <!-- Glass Card -->
        <div class="relative overflow-hidden rounded-2xl bg-white/60 backdrop-blur-xl border border-white/50 shadow-2xl p-8">
            <div class="absolute top-0 left-0 w-full h-1 bg-brand-500"></div>
            
            <div class="flex items-center gap-6 mb-8">
                <div class="flex h-20 w-20 items-center justify-center rounded-full bg-brand-100 text-brand-600 shadow-md">
                    <i class="bi bi-journal-bookmark text-4xl"></i>
                </div>
                <div>
                    <h1 class="text-2xl font-bold text-slate-800">Détails de l'Emprunt</h1>
                    <p class="text-slate-500">ID: @Model.Id</p>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 bg-white/40 rounded-xl p-6 border border-white/40">
                <div class="md:col-span-2">
                    <p class="text-xs font-semibold text-slate-400 uppercase tracking-wider">Livre</p>
                    <p class="text-lg font-medium text-slate-900">@Model.Livre.Titre</p>
                </div>
                <div>
                    <p class="text-xs font-semibold text-slate-400 uppercase tracking-wider">Membre</p>
                    <p class="text-base font-medium text-slate-800">@Model.Membre.FullName</p>
                </div>
                <div>
                     <p class="text-xs font-semibold text-slate-400 uppercase tracking-wider">État</p>
                     @if (Model.DateRetourEffective.HasValue)
                     {
                          <span class="inline-flex items-center rounded-full bg-green-100 px-2 py-1 text-xs font-bold text-green-700">Retourné le @Model.DateRetourEffective.Value.ToString("dd/MM/yyyy")</span>
                     }
                     else if (Model.DateRetourPrevue < DateTime.Now)
                     {
                          <span class="inline-flex items-center rounded-full bg-red-100 px-2 py-1 text-xs font-bold text-red-700">En retard</span>
                     }
                     else
                     {
                          <span class="inline-flex items-center rounded-full bg-blue-100 px-2 py-1 text-xs font-bold text-blue-700">En cours</span>
                     }
                </div>
                <div>
                    <p class="text-xs font-semibold text-slate-400 uppercase tracking-wider">Date Emprunt</p>
                    <p class="text-base font-medium text-slate-800">@Model.DateEmprunt.ToString("dd/MM/yyyy")</p>
                </div>
                <div>
                    <p class="text-xs font-semibold text-slate-400 uppercase tracking-wider">Retour Prévu</p>
                    <p class="text-base font-medium text-slate-800">@Model.DateRetourPrevue.ToString("dd/MM/yyyy")</p>
                </div>
            </div>

            <div class="mt-8 flex items-center justify-end gap-4">
                <a asp-action="Index" class="rounded-xl px-4 py-2 text-sm font-semibold text-slate-700 hover:bg-white/50 transition-colors">
                    Retour
                </a>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="rounded-xl bg-brand-600 px-6 py-2 text-sm font-semibold text-white shadow-sm hover:bg-brand-500 transition-all">
                        Modifier
                    </a>
                }
            </div>
        </div>
    </div>
</div>
