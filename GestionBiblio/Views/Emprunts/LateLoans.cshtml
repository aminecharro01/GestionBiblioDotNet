@model IEnumerable<GestionBiblio.Models.Emprunt>

@{
    ViewData["Title"] = "Emprunts en Retard";
}

<div class="space-y-6">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 bg-white/60 p-6 rounded-2xl backdrop-blur-xl border border-white/50 shadow-lg">
        <div>
             <h1 class="text-3xl font-bold tracking-tight text-red-700 flex items-center gap-3">
                <i class="bi bi-clock-history"></i> Emprunts en Retard
            </h1>
            <p class="text-slate-600 mt-1">Liste des livres non retournés à la date prévue.</p>
        </div>
    </div>

    <!-- Table Container -->
    <div class="bg-white/70 backdrop-blur-xl rounded-2xl shadow-xl border border-white/50 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-sm text-left text-slate-600">
                <thead class="text-xs text-slate-800 uppercase bg-white/40 border-b border-white/30">
                    <tr>
                        <th class="px-6 py-4 font-bold">@Html.DisplayNameFor(model => model.DateEmprunt)</th>
                        <th class="px-6 py-4 font-bold text-red-600">@Html.DisplayNameFor(model => model.DateRetourPrevue)</th>
                        <th class="px-6 py-4 font-bold">Livre</th>
                        <th class="px-6 py-4 font-bold">Membre</th>
                        <th class="px-6 py-4 font-bold text-center">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-white/30">
                    @foreach (var item in Model) {
                        <tr class="hover:bg-white/40 transition-colors group">
                             <td class="px-6 py-4">
                                @Html.DisplayFor(modelItem => item.DateEmprunt)
                            </td>
                            <td class="px-6 py-4 font-bold text-red-600">
                                @Html.DisplayFor(modelItem => item.DateRetourPrevue)
                            </td>
                            <td class="px-6 py-4 font-bold text-slate-900">
                                @Html.DisplayFor(modelItem => item.Livre.Titre)
                            </td>
                            <td class="px-6 py-4">
                                <span class="inline-flex items-center gap-1.5 px-2.5 py-0.5 rounded-full text-xs font-medium bg-white/50 text-slate-700 border border-white/40">
                                    <i class="bi bi-person-circle text-brand-400"></i>
                                    @Html.DisplayFor(modelItem => item.Membre.FullName)
                                </span>
                            </td>
                            <td class="px-6 py-4 text-center">
                                <div class="flex items-center justify-center gap-2 opacity-70 group-hover:opacity-100 transition-opacity">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="p-1.5 rounded-md text-slate-500 hover:text-brand-600 hover:bg-white/50 transition-colors" title="Détails">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                     @if (User.IsInRole("Admin"))
                                    {
                                         <form asp-controller="Amendes" asp-action="Create" method="get" class="inline">
                                             <input type="hidden" name="EmpruntId" value="@item.Id" />
                                             <button type="submit" class="p-1.5 rounded-md text-slate-500 hover:text-red-600 hover:bg-white/50 transition-colors" title="Créer Amende">
                                                 <i class="bi bi-receipt"></i>
                                             </button>
                                         </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
