@model GestionBiblio.Models.Emprunt

@{
    ViewData["Title"] = "Supprimer l'Emprunt";
}

<div class="flex min-h-[60vh] items-center justify-center p-4">
    <div class="w-full max-w-lg">
        <!-- Glass Card -->
        <div class="relative overflow-hidden rounded-2xl bg-white/60 backdrop-blur-xl border border-red-100 shadow-2xl p-8">
            <div class="absolute top-0 left-0 w-full h-1 bg-red-500"></div>
            
            <div class="text-center mb-8">
                <div class="mx-auto flex h-16 w-16 items-center justify-center rounded-full bg-red-100">
                    <i class="bi bi-trash text-3xl text-red-600"></i>
                </div>
                <h3 class="mt-4 text-2xl font-bold text-slate-900">Supprimer cet emprunt ?</h3>
                <p class="mt-2 text-slate-600">Cette action est irréversible.</p>
            </div>

            <div class="bg-white/50 rounded-xl p-6 mb-8 border border-white/50 text-sm">
                <div class="grid grid-cols-2 gap-4">
                     <div>
                        <p class="font-semibold text-slate-500">Livre</p>
                        <p class="text-slate-900 font-medium">@Model.Livre.Titre</p>
                    </div>
                     <div>
                        <p class="font-semibold text-slate-500">Membre</p>
                        <p class="text-slate-900 font-medium">@Model.Membre.FullName</p>
                    </div>
                     <div>
                        <p class="font-semibold text-slate-500">Emprunté le</p>
                        <p class="text-slate-900">@Model.DateEmprunt.ToString("dd/MM/yyyy")</p>
                    </div>
                </div>
            </div>

            <div class="flex items-center justify-center gap-4">
                <a asp-action="Index" class="rounded-xl px-4 py-2.5 text-sm font-semibold text-slate-700 hover:bg-white/50 transition-colors">
                    Annuler
                </a>
                
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="rounded-xl bg-red-600 px-6 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-red-500 hover:shadow-md transition-all">
                        Confirmer la suppression
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
