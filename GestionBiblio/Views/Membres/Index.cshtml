@model IEnumerable<GestionBiblio.Models.Membre>

@{
    ViewData["Title"] = "Membres";
}

<div class="space-y-6">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 bg-white/60 p-6 rounded-2xl backdrop-blur-xl border border-white/50 shadow-lg">
        <h1 class="text-3xl font-bold tracking-tight text-slate-900">Gestion des Membres</h1>
        <div class="flex gap-2">
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Create" class="inline-flex items-center justify-center rounded-lg bg-brand-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-brand-500 transition-colors">
                    <i class="bi bi-person-plus mr-2"></i> Nouveau Membre
                </a>
                <a asp-action="ExportToCsv" class="inline-flex items-center justify-center rounded-lg bg-white/80 px-4 py-2 text-sm font-semibold text-slate-700 shadow-sm ring-1 ring-inset ring-slate-300 hover:bg-white transition-colors backdrop-blur-sm">
                    <i class="bi bi-download mr-2"></i> CSV
                </a>
            }
        </div>
    </div>

    <!-- Search -->
    <form asp-action="Index" method="get" class="flex gap-2 bg-white/40 p-2 rounded-xl border border-white/40 backdrop-blur-sm">
        <input type="text" name="searchString" placeholder="Rechercher par nom ou email..." class="block w-full rounded-lg border-0 bg-white/50 py-2 px-4 text-slate-900 shadow-sm ring-1 ring-inset ring-slate-300 placeholder:text-slate-400 focus:ring-2 focus:ring-inset focus:ring-brand-600 sm:text-sm sm:leading-6 transition-all" />
        <button type="submit" class="rounded-lg bg-slate-800 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-slate-700 transition-colors">
            Rechercher
        </button>
    </form>

    <!-- Table Container -->
    <div class="bg-white/70 backdrop-blur-xl rounded-2xl shadow-xl border border-white/50 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-sm text-left text-slate-600">
                <thead class="text-xs text-slate-800 uppercase bg-white/40 border-b border-white/30">
                    <tr>
                        <th class="px-6 py-4 font-bold">Nom</th>
                        <th class="px-6 py-4 font-bold">Prénom</th>
                        <th class="px-6 py-4 font-bold">Email</th>
                        <th class="px-6 py-4 font-bold">Date Adhésion</th>
                        @if (User.IsInRole("Admin"))
                        {
                            <th class="px-6 py-4 font-bold text-center">Actions</th>
                        }
                    </tr>
                </thead>
                <tbody class="divide-y divide-white/30">
                    @foreach (var item in Model) {
                        <tr class="hover:bg-white/40 transition-colors group">
                            <td class="px-6 py-4 font-bold text-slate-900">
                                @Html.DisplayFor(modelItem => item.Nom)
                            </td>
                            <td class="px-6 py-4 text-slate-800">
                                @Html.DisplayFor(modelItem => item.Prenom)
                            </td>
                            <td class="px-6 py-4">
                                <span class="inline-flex items-center gap-1.5 px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-50/50 text-blue-700 border border-blue-100/50">
                                    <i class="bi bi-envelope"></i>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </span>
                            </td>
                            <td class="px-6 py-4 text-slate-500">
                                @item.DateAdhesion.ToString("dd/MM/yyyy")
                            </td>
                            @if (User.IsInRole("Admin"))
                            {
                                <td class="px-6 py-4 text-center">
                                    <div class="flex items-center justify-center gap-2 opacity-70 group-hover:opacity-100 transition-opacity">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="p-1.5 rounded-md text-slate-500 hover:text-brand-600 hover:bg-white/50 transition-colors" title="Détails">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="p-1.5 rounded-md text-slate-500 hover:text-amber-600 hover:bg-white/50 transition-colors" title="Modifier">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="p-1.5 rounded-md text-slate-500 hover:text-red-600 hover:bg-white/50 transition-colors" title="Supprimer">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
