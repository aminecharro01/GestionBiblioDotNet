@model IEnumerable<GestionBiblio.Models.Amende>

@{
    ViewData["Title"] = "Amendes";
}

<div class="space-y-6">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 bg-white/60 p-6 rounded-2xl backdrop-blur-xl border border-white/50 shadow-lg">
        <h1 class="text-3xl font-bold tracking-tight text-slate-900">Gestion des Amendes</h1>
        <div class="flex gap-2">
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Create" class="inline-flex items-center justify-center rounded-lg bg-brand-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-brand-500 transition-colors">
                    <i class="bi bi-plus-lg mr-2"></i> Nouvelle Amende
                </a>
                <a asp-action="ExportToCsv" class="inline-flex items-center justify-center rounded-lg bg-white/80 px-4 py-2 text-sm font-semibold text-slate-700 shadow-sm ring-1 ring-inset ring-slate-300 hover:bg-white transition-colors backdrop-blur-sm">
                    <i class="bi bi-download mr-2"></i> CSV
                </a>
            }
        </div>
    </div>

    <!-- Table Container -->
    <div class="bg-white/70 backdrop-blur-xl rounded-2xl shadow-xl border border-white/50 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-sm text-left text-slate-600">
                <thead class="text-xs text-slate-800 uppercase bg-white/40 border-b border-white/30">
                    <tr>
                        <th class="px-6 py-4 font-bold">Livre</th>
                        <th class="px-6 py-4 font-bold">Membre</th>
                        <th class="px-6 py-4 font-bold">Montant</th>
                        <th class="px-6 py-4 font-bold">État</th>
                        <th class="px-6 py-4 font-bold">Date Création</th>
                        <th class="px-6 py-4 font-bold text-center">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-white/30">
                    @foreach (var item in Model) {
                        <tr class="hover:bg-white/40 transition-colors group">
                            <td class="px-6 py-4 font-bold text-slate-900">
                                @Html.DisplayFor(modelItem => item.Emprunt.Livre.Titre)
                            </td>
                            <td class="px-6 py-4">
                                <span class="inline-flex items-center gap-1.5 px-2.5 py-0.5 rounded-full text-xs font-medium bg-white/50 text-slate-700 border border-white/40">
                                    <i class="bi bi-person-circle text-brand-400"></i>
                                    @Html.DisplayFor(modelItem => item.Emprunt.Membre.FullName)
                                </span>
                            </td>
                            <td class="px-6 py-4 font-bold text-slate-900">
                                @Html.DisplayFor(modelItem => item.Montant) MAD
                            </td>
                            <td class="px-6 py-4">
                                @if (item.EstPaye)
                                {
                                    <span class="inline-flex items-center rounded-full bg-green-100/80 px-2 py-1 text-xs font-bold text-green-700 ring-1 ring-inset ring-green-600/20 backdrop-blur-sm">Payée</span>
                                    <div class="text-xs text-slate-500 mt-1">le @item.DatePaiement?.ToString("dd/MM/yyyy")</div>
                                }
                                else
                                {
                                    <span class="inline-flex items-center rounded-full bg-red-100/80 px-2 py-1 text-xs font-bold text-red-700 ring-1 ring-inset ring-red-600/20 backdrop-blur-sm">Impayée</span>
                                }
                            </td>
                            <td class="px-6 py-4">
                                @item.DateCreation.ToString("dd/MM/yyyy")
                            </td>
                            <td class="px-6 py-4 text-center">
                                <div class="flex items-center justify-center gap-2 opacity-70 group-hover:opacity-100 transition-opacity">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="p-1.5 rounded-md text-slate-500 hover:text-brand-600 hover:bg-white/50 transition-colors" title="Détails">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="p-1.5 rounded-md text-slate-500 hover:text-amber-600 hover:bg-white/50 transition-colors" title="Modifier">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="p-1.5 rounded-md text-slate-500 hover:text-red-600 hover:bg-white/50 transition-colors" title="Supprimer">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    }
                                    @if (!item.EstPaye)
                                    {
                                        <form asp-action="Pay" asp-route-id="@item.Id" method="post" class="inline">
                                            <button type="submit" class="p-1.5 rounded-md text-slate-500 hover:text-green-600 hover:bg-white/50 transition-colors" title="Marquer comme payée">
                                                <i class="bi bi-cash-coin"></i>
                                            </button>
                                        </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
