@model GestionBiblio.Models.Amende

@{
    ViewData["Title"] = "Détails Amende";
}

<div class="flex min-h-[60vh] items-center justify-center p-4">
    <div class="w-full max-w-2xl">
        <!-- Glass Card -->
        <div class="relative overflow-hidden rounded-2xl bg-white/60 backdrop-blur-xl border border-white/50 shadow-2xl p-8">
            <div class="absolute top-0 left-0 w-full h-1 bg-red-500"></div>
            
            <div class="flex items-center gap-6 mb-8">
                <div class="flex h-20 w-20 items-center justify-center rounded-full bg-red-100 text-red-600 shadow-md">
                    <i class="bi bi-exclamation-circle text-4xl"></i>
                </div>
                <div>
                    <h1 class="text-2xl font-bold text-slate-800">Détails de l'Amende</h1>
                    <p class="text-slate-500">Information sur l'infraction</p>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 bg-white/40 rounded-xl p-6 border border-white/40">
                <div class="md:col-span-2">
                    <p class="text-xs font-semibold text-slate-400 uppercase tracking-wider">Livre concerné</p>
                    <p class="text-lg font-medium text-slate-900">@Model.Emprunt.Livre.Titre</p>
                </div>
                <div>
                    <p class="text-xs font-semibold text-slate-400 uppercase tracking-wider">Membre</p>
                    <!-- Null check for Emprunt/Membre to avoid runtime errors if data is incomplete -->
                    <p class="text-base font-medium text-slate-800">@Model.Emprunt?.Membre?.FullName</p>
                </div>
                <div>
                    <p class="text-xs font-semibold text-slate-400 uppercase tracking-wider">Montant</p>
                    <p class="text-xl font-bold text-red-600">@Model.Montant MAD</p>
                </div>
                <div>
                    <p class="text-xs font-semibold text-slate-400 uppercase tracking-wider">État</p>
                    @if (Model.EstPaye)
                    {
                        <span class="inline-flex items-center rounded-full bg-green-100 px-2 py-1 text-xs font-bold text-green-700">Payée le @Model.DatePaiement</span>
                    }
                    else
                    {
                        <span class="inline-flex items-center rounded-full bg-red-100 px-2 py-1 text-xs font-bold text-red-700">Impayée</span>
                    }
                </div>
                <div>
                    <p class="text-xs font-semibold text-slate-400 uppercase tracking-wider">Date création</p>
                    <p class="text-base font-medium text-slate-800">@Model.DateCreation.ToString("dd/MM/yyyy")</p>
                </div>
            </div>

            <div class="mt-8 flex items-center justify-end gap-4">
                <a asp-action="Index" class="rounded-xl px-4 py-2 text-sm font-semibold text-slate-700 hover:bg-white/50 transition-colors">
                    Retour
                </a>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="rounded-xl bg-brand-600 px-6 py-2 text-sm font-semibold text-white shadow-sm hover:bg-brand-500 transition-all">
                        Modifier
                    </a>
                }
                @if (!Model.EstPaye)
                {
                    <form asp-action="Pay" asp-route-id="@Model.Id" method="post" class="inline-block">
                         <button type="submit" class="rounded-xl bg-green-600 px-6 py-2 text-sm font-semibold text-white shadow-sm hover:bg-green-500 transition-all">Payer</button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>
