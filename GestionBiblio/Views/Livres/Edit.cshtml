@model GestionBiblio.Models.Livre

@{
    ViewData["Title"] = "Modifier le Livre";
}

<div class="max-w-2xl mx-auto space-y-8">
    <!-- Header -->
    <div class="text-center">
        <h1 class="text-3xl font-bold tracking-tight text-slate-900">Modifier le Livre</h1>
        <p class="mt-2 text-slate-600">Mettre à jour les informations de "@Model.Titre"</p>
    </div>

    <!-- Glass Card Form -->
    <div class="bg-white/60 backdrop-blur-xl border border-white/50 rounded-2xl shadow-xl p-8">
        <form asp-action="Edit" enctype="multipart/form-data" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm text-center bg-red-50/50 rounded-lg p-2"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageUrl" />

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Title -->
                <div class="md:col-span-2">
                    <label asp-for="Titre" class="block text-sm font-medium text-slate-700 mb-1"></label>
                    <input asp-for="Titre" class="block w-full rounded-xl border-0 bg-white/50 py-2.5 px-3 text-slate-900 shadow-sm ring-1 ring-inset ring-slate-300 focus:ring-2 focus:ring-inset focus:ring-brand-600 sm:text-sm sm:leading-6 backdrop-blur-sm transition-all" />
                    <span asp-validation-for="Titre" class="text-xs text-red-500 mt-1"></span>
                </div>

                <!-- Author -->
                <div>
                    <label asp-for="Auteur" class="block text-sm font-medium text-slate-700 mb-1"></label>
                    <input asp-for="Auteur" class="block w-full rounded-xl border-0 bg-white/50 py-2.5 px-3 text-slate-900 shadow-sm ring-1 ring-inset ring-slate-300 focus:ring-2 focus:ring-inset focus:ring-brand-600 sm:text-sm sm:leading-6 backdrop-blur-sm transition-all" />
                    <span asp-validation-for="Auteur" class="text-xs text-red-500 mt-1"></span>
                </div>

                <!-- ISBN -->
                <div>
                    <label asp-for="ISBN" class="block text-sm font-medium text-slate-700 mb-1"></label>
                    <input asp-for="ISBN" class="block w-full rounded-xl border-0 bg-white/50 py-2.5 px-3 text-slate-900 shadow-sm ring-1 ring-inset ring-slate-300 focus:ring-2 focus:ring-inset focus:ring-brand-600 sm:text-sm sm:leading-6 backdrop-blur-sm transition-all" />
                    <span asp-validation-for="ISBN" class="text-xs text-red-500 mt-1"></span>
                </div>

                <!-- Year -->
                <div>
                    <label asp-for="AnneePublication" class="block text-sm font-medium text-slate-700 mb-1"></label>
                    <input asp-for="AnneePublication" class="block w-full rounded-xl border-0 bg-white/50 py-2.5 px-3 text-slate-900 shadow-sm ring-1 ring-inset ring-slate-300 focus:ring-2 focus:ring-inset focus:ring-brand-600 sm:text-sm sm:leading-6 backdrop-blur-sm transition-all" />
                    <span asp-validation-for="AnneePublication" class="text-xs text-red-500 mt-1"></span>
                </div>

                <!-- Copies -->
                <div>
                    <label asp-for="NombreExemplaires" class="block text-sm font-medium text-slate-700 mb-1"></label>
                    <input asp-for="NombreExemplaires" class="block w-full rounded-xl border-0 bg-white/50 py-2.5 px-3 text-slate-900 shadow-sm ring-1 ring-inset ring-slate-300 focus:ring-2 focus:ring-inset focus:ring-brand-600 sm:text-sm sm:leading-6 backdrop-blur-sm transition-all" />
                    <span asp-validation-for="NombreExemplaires" class="text-xs text-red-500 mt-1"></span>
                </div>

                <!-- Category -->
                <div class="md:col-span-2">
                    <label asp-for="CategorieId" class="block text-sm font-medium text-slate-700 mb-1"></label>
                    <select asp-for="CategorieId" class="block w-full rounded-xl border-0 bg-white/50 py-2.5 px-3 text-slate-900 shadow-sm ring-1 ring-inset ring-slate-300 focus:ring-2 focus:ring-inset focus:ring-brand-600 sm:text-sm sm:leading-6 backdrop-blur-sm transition-all" asp-items="ViewBag.CategorieId">
                        <option value="">-- Sélectionner une catégorie --</option>
                    </select>
                    <span asp-validation-for="CategorieId" class="text-xs text-red-500 mt-1"></span>
                </div>

                 <!-- Image -->
                <div class="md:col-span-2">
                     <label for="imageFile" class="block text-sm font-medium text-slate-700 mb-1">Image de couverture</label>
                    
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div class="flex items-center gap-4 mb-4 bg-white/40 p-3 rounded-xl border border-white/50">
                            <img src="@Model.GetImageUrl()" alt="@Model.Titre" class="h-20 w-auto rounded-md shadow-sm object-cover" />
                            <div>
                                <p class="text-sm font-medium text-slate-900">Image actuelle</p>
                                <p class="text-xs text-slate-500">Sera conservée si non modifiée</p>
                            </div>
                        </div>
                    }

                    <div class="mt-2 flex justify-center rounded-xl border border-dashed border-slate-300 px-6 py-10 bg-white/30 hover:bg-white/50 transition-colors">
                        <div class="text-center">
                           <div class="mx-auto h-12 w-12 text-slate-300">
                                <i class="bi bi-image text-3xl"></i>
                            </div>
                            <div class="mt-4 flex text-sm leading-6 text-slate-600">
                                <label for="imageFile" class="relative cursor-pointer rounded-md font-semibold text-brand-600 focus-within:outline-none focus-within:ring-2 focus-within:ring-brand-600 focus-within:ring-offset-2 hover:text-brand-500">
                                    <span>Télécharger un nouveau fichier</span>
                                    <input id="imageFile" name="imageFile" type="file" class="sr-only" accept="image/*">
                                </label>
                                <p class="pl-1">ou glisser-déposer</p>
                            </div>
                            <p class="text-xs leading-5 text-slate-600">PNG, JPG, GIF jusqu'à 10MB</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Actions -->
            <div class="mt-8 flex items-center justify-end gap-x-6">
                <a asp-action="Index" class="text-sm font-semibold leading-6 text-slate-900 hover:text-brand-600 transition-colors">Annuler</a>
                <button type="submit" class="rounded-xl bg-brand-600 px-8 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-brand-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-600 transition-all transform hover:scale-105">
                    Enregistrer les modifications
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
