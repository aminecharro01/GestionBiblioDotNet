@model GestionBiblio.Models.Livre

@{
    ViewData["Title"] = "Supprimer le Livre";
}

<div class="flex min-h-[60vh] items-center justify-center p-4">
    <div class="w-full max-w-lg">
        <!-- Glass Card -->
        <div class="relative overflow-hidden rounded-2xl bg-white/60 backdrop-blur-xl border border-red-100 shadow-2xl p-8">
            <div class="absolute top-0 left-0 w-full h-1 bg-red-500"></div>
            
            <div class="text-center mb-8">
                <div class="mx-auto flex h-16 w-16 items-center justify-center rounded-full bg-red-100">
                    <i class="bi bi-exclamation-triangle text-3xl text-red-600"></i>
                </div>
                <h3 class="mt-4 text-2xl font-bold text-slate-900">Supprimer ce livre ?</h3>
                <p class="mt-2 text-slate-600">Cette action est irréversible. Êtes-vous sûr de vouloir supprimer définitivement :</p>
                <div class="mt-4 p-4 bg-white/50 rounded-xl border border-white/50">
                    <h4 class="text-lg font-bold text-slate-800">@Model.Titre</h4>
                    <p class="text-sm text-slate-500">@Model.Auteur</p>
                </div>
            </div>

            <dl class="grid grid-cols-2 gap-x-4 gap-y-4 text-sm mb-8 text-left bg-slate-50/50 p-4 rounded-xl">
                 <dt class="font-semibold text-slate-500">ISBN</dt>
                <dd class="text-slate-900">@Model.ISBN</dd>
                
                <dt class="font-semibold text-slate-500">Année</dt>
                <dd class="text-slate-900">@Model.AnneePublication</dd>
                
                <dt class="font-semibold text-slate-500">Exemplaires</dt>
                <dd class="text-slate-900">@Model.NombreExemplaires</dd>
            </dl>

            <div class="flex items-center justify-center gap-4">
                <a asp-action="Index" class="rounded-xl px-4 py-2.5 text-sm font-semibold text-slate-700 hover:bg-white/50 transition-colors">
                    Annuler
                </a>
                
                @if (User.IsInRole("Admin"))
                {
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="rounded-xl bg-red-600 px-6 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-red-500 hover:shadow-md transition-all">
                            Confirmer la suppression
                        </button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>
