@page
@model LoginModel

@{
    ViewData["Title"] = "Connexion";
}

<div class="flex min-h-[80vh] items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="w-full max-w-md space-y-8">
        <!-- Glass Card -->
        <div class="relative overflow-hidden rounded-2xl bg-white/60 backdrop-blur-xl border border-white/50 shadow-2xl p-8 sm:p-10">
            <!-- Decorative blobs -->
            <div class="absolute -top-10 -right-10 h-32 w-32 rounded-full bg-brand-400/20 blur-2xl"></div>
            <div class="absolute -bottom-10 -left-10 h-32 w-32 rounded-full bg-amber-400/20 blur-2xl"></div>

            <div class="relative">
                <div class="text-center mb-10">
                    <h2 class="text-3xl font-bold tracking-tight text-slate-800">Bon retour !</h2>
                    <p class="mt-2 text-sm text-slate-600">
                        Veuillez vous connecter à votre compte
                    </p>
                </div>

                <form id="account" method="post" class="space-y-6">
                    <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm text-center bg-red-50/50 rounded-lg p-2" role="alert"></div>
                    
                    <div>
                        <label asp-for="Input.Email" class="block text-sm font-medium text-slate-700 mb-1">Email</label>
                        <div class="relative rounded-md shadow-sm">
                            <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
                                <i class="bi bi-envelope text-slate-400"></i>
                            </div>
                            <input asp-for="Input.Email" class="block w-full rounded-xl border-0 bg-white/50 py-2.5 pl-10 text-slate-900 shadow-sm ring-1 ring-inset ring-slate-300 placeholder:text-slate-400 focus:ring-2 focus:ring-inset focus:ring-brand-600 sm:text-sm sm:leading-6 backdrop-blur-sm transition-all" autocomplete="username" aria-required="true" placeholder="nom@exemple.com" />
                        </div>
                        <span asp-validation-for="Input.Email" class="text-xs text-red-500 mt-1"></span>
                    </div>

                    <div>
                        <label asp-for="Input.Password" class="block text-sm font-medium text-slate-700 mb-1">Mot de passe</label>
                        <div class="relative rounded-md shadow-sm">
                            <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
                                <i class="bi bi-lock text-slate-400"></i>
                            </div>
                            <input asp-for="Input.Password" class="block w-full rounded-xl border-0 bg-white/50 py-2.5 pl-10 text-slate-900 shadow-sm ring-1 ring-inset ring-slate-300 placeholder:text-slate-400 focus:ring-2 focus:ring-inset focus:ring-brand-600 sm:text-sm sm:leading-6 backdrop-blur-sm transition-all" autocomplete="current-password" aria-required="true" placeholder="••••••••" />
                        </div>
                        <span asp-validation-for="Input.Password" class="text-xs text-red-500 mt-1"></span>
                    </div>

                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <input asp-for="Input.RememberMe" class="h-4 w-4 rounded border-slate-300 text-brand-600 focus:ring-brand-600 bg-white/50" />
                            <label asp-for="Input.RememberMe" class="ml-2 block text-sm text-slate-600">Se souvenir de moi</label>
                        </div>
                        <div class="text-sm">
                            <a id="forgot-password" asp-page="./ForgotPassword" class="font-medium text-brand-600 hover:text-brand-500">Mot de passe oublié ?</a>
                        </div>
                    </div>

                    <div>
                        <button id="login-submit" type="submit" class="flex w-full justify-center rounded-xl bg-brand-600 px-3 py-3 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-brand-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-600 transition-all duration-300 transform hover:scale-[1.02]">
                            Se connecter
                        </button>
                    </div>
                </form>

                <div class="mt-8 text-center">
                    <p class="text-sm text-slate-600">
                        Pas encore de compte ?
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="font-semibold text-brand-600 hover:text-brand-500 transition-colors">
                            Créer un compte
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
